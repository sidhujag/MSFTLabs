{
  "$schema": "https://raw.githubusercontent.com/Azure/azure-devtestlab/master/schemas/2015-01-01/dtlArtifacts.json",
  "title": "Add Go Ethereum Node Linux",
  "description": "Add an Linux based Go Ethereum node to existing network in the Lab",
  "tags": [
    "Bash",
    "Linux"
  ],
  "iconUri": "https://raw.githubusercontent.com/marleyg/MSFTLabs/master/artifacts/Add%20Go%20Ethereum%20Node/labArtifact.png",
  "targetOsType": "Linux",
  "parameters": {
    "adminUserName": {
      "type": "string",
      "displayName": "Admin User Account",
      "description": "Needs to be the same account name for the host",
      "allowEmpty": false
    }
  },
  "runCommand": {
    "commandToExecute": "[concat('bash', ' ', 'add-node.sh', ' ', parameters('adminUserName'))]"
  }
}


